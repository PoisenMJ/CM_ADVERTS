extends layout

block content
    p#videoID(style="display:none")=id
    iframe(id="player"
        width="640" height="360"
        src=`${url}?enablejsapi=1&origin=http://localhost:5000&controls=0`
        type="text/html"
        frameborder="0"
        style="border: solid 4px #37474F"
    )

    script(type="text/javascript").
        var tag = document.createElement('script');
        tag.src = "https://www.youtube.com/iframe_api";
        var firstScriptTag = document.getElementsByTagName('script')[0];
        firstScriptTag.parentNode.insertBefore(tag, firstScriptTag);

        // 3. This function creates an <iframe> (and YouTube player)
        //    after the API code downloads.
        function onYouTubeIframeAPIReady() {
            var player;
            player = new YT.Player('player', {
                events: {
                    'onReady': onPlayerReady,
                    'onStateChange': onPlayerStateChange
                }
            });
        }

        var startTime, elapsedStartTime;
        var elapsedTime = 0;
        function onPlayerReady(event){
            event.target.setVolume(10);
            event.target.playVideo();
        }
        function onPlayerStateChange(event){
            // 1: video play
            // 2: video paused
            if(event.data === 1){
                var d = new Date().getTime();
                startTime = d;
                elapsedStartTime = d;
            } else if(event.data === 2){
                elapsedTime += (newDate().getTime() - elapsedStartTime);
            }
            // 0: video finished playing
            if(event.data === 0){
                fetch(`http://localhost:5000/api/v1/advert/end`, {
                    method: "POST",
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({userID: "cm_pub_etvxuw901wq8h8rg",
                                            previousTime: startTime,
                                            elapsedTime: elapsedTime,
                                            videoID: document.getElementById("videoID").innerHTML})
                }).then(r => console.log(r));
            }
        }